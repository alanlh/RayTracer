#include "Drawable.h"

#include "../scene/Vector3.h"
#include "../image/HSLAPixel.h"

Drawable::Drawable() {
  surface_color_ = new HSLAPixel();
  surface_color_->h = 180;
  surface_color_->s = 0.5;
  surface_color_->l = 0.5;
  surface_color_->a = 1;
  emission_color_ = new HSLAPixel();
}

Drawable::~Drawable() {
    delete surface_color_;
    delete emission_color_;
}
